{
  "compileOnSave": false, 
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "rootDir": ".",
    "outDir": "./dist",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./libTypes"],
    "paths": {
      "lib": ["./src/lib"],
      "types": ["./src/types"],
      "consts": ["./src/constants"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
