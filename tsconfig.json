{
  "extends": "./tsconfig.build.json",
  "compileOnSave": false, 
  "compilerOptions": {
    "noEmit": true,
    "sourceMap": true,
    "strict": true,
    "rootDir": ".",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./libTypes"]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
