{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "paths": {
      "lib": ["./src/lib"],
      "types": ["./src/types"],
      "consts": ["./src/constants"]
    }
  },
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "src/__tests__"
  ]
}
